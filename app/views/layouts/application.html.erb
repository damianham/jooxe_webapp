<script type="text/javascript">
			
  $(document).ready(function() {

    var now = new Date(); 
    var now_utc = new Date(now.getUTCFullYear(), now.getUTCMonth(), now.getUTCDate(),  now.getUTCHours(), now.getUTCMinutes(), now.getUTCSeconds());

    $("#dateonlypicker").AnyTime_picker({ 
      format: "%Y-%m-%d",
      earliest: now_utc,
      utcFormatOffsetImposed: 0,
      utcFormatOffsetAlleged: 0,
      utcParseOffsetAssumed: 0
    });
    $('#dateonlypicker').after('(yyyy-mm-dd <b>in <a href="http://www.timedial.net/world-time-difference-calculator/" target="_blank">UTC±00:00 timezone</a></b>)');
    // a date must be set
    //					$('#dateonlypicker').keydown(function(e) {
    //						if (e.which == 8 || e.which == 46) {
    //						    // backspace and del keys
    //							$('#dateonlypicker').val("").change();
    //					    }               
    //					});



    $('#datetimepicker').AnyTime_picker({ 
      format: "%Y-%m-%d %H:%i",
      earliest: now_utc,
      utcFormatOffsetImposed: 0,
      utcFormatOffsetAlleged: 0,
      utcParseOffsetAssumed: 0
    } );
    $('#datetimepicker').after('(yyyy-mm-dd hh:mm <b>in <a href="http://www.timedial.net/world-time-difference-calculator/" target="_blank">UTC±00:00 timezone</a></b>)');
    // datetime may be empty:
    $('#datetimepicker').keydown(function(e) {
      if (e.which == 8 || e.which == 46) {
        // backspace and del keys
        $('#datetimepicker').val("").change();
      }               
    });



    //				if(typeof $(".sortedTable").tablesorter == 'function') {
    //					$(".sortedTable").tablesorter({widgets: ['zebra']});
    //				};
    setTimeout("$('#flash').addClass('hidden');", 4000); // 4 seconds delay
    if(typeof updateStyledCountries == 'function') {
      $('select.styled').customStyle();
      updateStyledCountries();
    };

    initMenu();

    // trim all text input fields:
    $('input:text').blur(function(){
      $(this).val($.trim($(this).val()));
    });
				
    $.ajaxSetup ({
      cache: false
    });
				
  });
</script>
